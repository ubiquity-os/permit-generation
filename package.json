{
  "name": "@ubiquity-os/permit-generation",
  "version": "2.0.0",
  "description": "ECR20 / ECR721 permit generation for automated payments.",
  "author": "Ubiquity DAO",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "format": "run-p format:*",
    "check-formatting": "run-p check-formatting:* format:cspell",
    "check-formatting:lint": "eslint --fix-dry-run",
    "check-formatting:prettier": "prettier --check .",
    "format:lint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "format:cspell": "cspell **/*",
    "knip": "knip --config .github/knip.ts",
    "knip-ci": "knip --no-exit-code --reporter json --config .github/knip.ts",
    "prepare": "husky install",
    "test": "jest --coverage",
    "build": "tsup",
    "worker": "wrangler dev --env dev --port 4000"
  },
  "keywords": [
    "typescript",
    "template",
    "dao",
    "ubiquity",
    "open-source"
  ],
  "dependencies": {
    "@octokit/rest": "20.1.1",
    "@octokit/webhooks": "13.2.7",
    "@sinclair/typebox": "0.32.33",
    "@supabase/supabase-js": "2.42.0",
    "@ubiquity-dao/rpc-handler": "1.3.0",
    "@ubiquity-os/ubiquity-os-logger": "^1.4.0",
    "@uniswap/permit2-sdk": "^1.2.0",
    "blake2b": "^2.1.4",
    "dotenv": "^16.4.7",
    "ethers": "^5.7.2",
    "libsodium-wrappers": "^0.7.13",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "typebox-validators": "0.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@cspell/dict-node": "5.0.1",
    "@cspell/dict-software-terms": "3.4.6",
    "@cspell/dict-typescript": "3.1.5",
    "@eslint/js": "9.5.0",
    "@jest/globals": "29.7.0",
    "@jest/types": "29.6.3",
    "@mswjs/data": "0.16.1",
    "@types/blake2b": "^2.1.3",
    "@types/jest": "^29.5.12",
    "@types/libsodium-wrappers": "^0.7.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "cspell": "8.14.4",
    "eslint": "9.12.0",
    "eslint-plugin-check-file": "2.8.0",
    "eslint-plugin-sonarjs": "1.0.3",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "jest-md-dashboard": "0.8.0",
    "knip": "5.33.1",
    "lint-staged": "15.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.3",
    "ts-jest": "29.1.5",
    "ts-node": "10.9.2",
    "tsup": "8.3.0",
    "typescript": "5.6.2",
    "typescript-eslint": "8.8.1",
    "wrangler": "^3.109.1"
  },
  "lint-staged": {
    "*.ts": [
      "yarn prettier --write",
      "eslint --fix"
    ],
    "src/**.{ts,json}": [
      "cspell"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "files": [
    "dist/*",
    "dist/types/*",
    "dist/handlers/*",
    "dist/utils/*",
    "README.md",
    "package.json"
  ],
  "module": "./dist/index.mjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.mts",
      "require": "./dist/utils/index.js",
      "import": "./dist/utils/index.mjs"
    },
    "./types": {
      "types": "./dist/types/index.d.mts",
      "require": "./dist/types/index.js",
      "import": "./dist/types/index.mjs"
    },
    "./handlers": {
      "types": "./dist/handlers/index.d.ts",
      "require": "./dist/handlers/index.mjs",
      "import": "./dist/handlers/index.js"
    }
  }
}
